{
    "name": "app/php-docker-stack",
    "description": "Stack completo PHP-FPM + Nginx + MySQL + Redis con Docker",
    "type": "project",
    "require": {
        "php": ">=8.2",
        "mailjet/mailjet-apiv3-php": "^1.6",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "serve": "php -S localhost:8000 -t public",
        "phpstan": "vendor/bin/phpstan analyse --configuration=phpstan.neon.dist --memory-limit=512M"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
